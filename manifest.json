{
    "name": "알바톡",
    "version": "0.0.1",
    "description": "알바천국과 알바몬에서 검색한 내용을 자동으로 정리해 카카오톡으로 내게 보내줍니다.",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html"
    },
    "icons":  {
        "16": "images/logo.jpg",
        "32": "images/logo.jpg",
        "48": "images/logo.jpg",
        "128": "images/logo.jpg"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.alba.co.kr/job/Detail.asp?*",
                "http://*.alba.co.kr/job/Detail.asp?*"
            ],
            "js": ["albaparse.js"]
        },
        {
            "matches": [
                "http://*.albamon.com/recruit/view/gi?*",
                "https://*.albamon.com/recruit/view/gi?*"
            ],
            "js": ["albamonparse.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}